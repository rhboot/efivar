set(EFIVAR_VERSION "@@VERSION@@")

find_path(
	EFIVAR_INCLUDE_DIR efivar.h
	HINTS "@@INCLUDEDIR@@"
	NO_DEFAULT_PATH
)

find_library(
	EFIVAR_LIBRARY efivar
	HINTS "@@LIBDIR@@"
	NO_DEFAULT_PATH
)

mark_as_advanced(EFIVAR_INCLUDE_DIR EFIVAR_LIBRARY)

if(EFIVAR_INCLUDE_DIR AND EFIVAR_LIBRARY)
	set(EfiVar_FOUND TRUE)
	set(EFIVAR_INCLUDE_DIRS ${EFIVAR_INCLUDE_DIR})
	set(EFIVAR_LIBRARIES ${EFIVAR_LIBRARY})
else()
	set(EfiVar_FOUND FALSE)
endif()
