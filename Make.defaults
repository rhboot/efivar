CC	= gcc
AS	= as
LD	= ld
INSTALL ?= install
libdir	?= /usr/lib64/
mandir	?= /usr/share/man/
includedir	?= /usr/include/
bindir	?= /usr/bin/
PCDIR	?= $(libdir)/pkgconfig/
DESTDIR ?= ""

ARCH = $(shell uname -m)
OPT_FLAGS ?= -O0 -g
CCLDFLAGS ?= ${OPT_FLAGS} -fpic -Wall -fshort-wchar -fno-strict-aliasing -fno-merge-constants -std=gnu99
CFLAGS	?= ${CCLDFLAGS} -D_GNU_SOURCE -I${TOPDIR}/src/
LIBFLAGS ?= -shared

SONAME_VERSION := 0
